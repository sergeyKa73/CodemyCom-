<MyLayout>

    BoxLayout:
        orientation:"vertical"
        size: root.width, root.height

        Splitter:
            sizable_from: 'bottom'
            Button:
                text: "First text"
                font_size: 32

        Splitter:
            sizable_from: 'bottom'
            Label:
                text: "This is some text"
                font_size: 32


        Button:
            text: "Second text"
            font_size: 32

        GridLayout:
            cols: 2

            Splitter:
                sizable_from: 'right'
                Button:
                    text: 'Left'
                    font_size: 32

            Button:
                text: 'Right'
                font_size: 32


