<MyGridLayout>

    name:name
    pizza:pizza
    thickness:thickness

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline:False

            Label:
                text: "Favorite Pizza"
            TextInput:
                id: pizza
                multiline:False
            Label:
                text: "Favorite Thickness"
            TextInput:
                id: thickness
                multiline:False

        Button:
            text: 'Submit'
            font_size: 32
            on_press: root.press()
