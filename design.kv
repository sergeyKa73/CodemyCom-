#:import utils kivy.utils
<MyGridLayout>

    name:name
    pizza:pizza
    thickness:thickness

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline:False
                background_color: utils.get_color_from_hex('#eeFa00')

            Label:
                text: "Favorite Pizza"
            TextInput:
                id: pizza
                multiline:False
            Label:
                text: "Favorite Thickness"
            TextInput:
                id: thickness
                multiline:False

        Button:
            text: 'Submit'
            font_size: 32
            #RGB -A
            background_normal: ''
            background_color: (238/255,0,1,1)
            # Hex
#            background_color: utils.get_color_from_hex('#eeFa00')
            on_press: root.press()
